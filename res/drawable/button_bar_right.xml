<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/primary_light_blue"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_selected="true">
                <inset android:insetLeft="@dimen/stay_mode_selector_inset">
                    <shape android:shape="rectangle">
                        <corners android:topRightRadius="@dimen/stay_mode_selector_corner_radius" android:bottomRightRadius="@dimen/stay_mode_selector_corner_radius" />
                        <solid android:width="@dimen/stay_mode_selector_line_width" android:color="@color/white" />
                    </shape>
                </inset>
            </item>
            <item android:state_selected="false">
                <inset android:insetLeft="@dimen/stay_mode_selector_inset">
                    <shape android:shape="rectangle">
                        <corners android:topRightRadius="@dimen/stay_mode_selector_corner_radius" android:bottomRightRadius="@dimen/stay_mode_selector_corner_radius" />
                        <stroke android:width="@dimen/stay_mode_selector_line_width" android:color="@color/white" />
                        <solid android:color="@color/transparent" />
                    </shape>
                </inset>
            </item>
        </selector>
    </item>
</ripple>