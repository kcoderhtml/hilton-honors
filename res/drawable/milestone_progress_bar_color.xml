<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/milestone_bar_unfilled" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4.0dip" />
                <gradient android:startColor="@color/milestone_bar_start" android:endColor="@color/milestone_bar_end" android:angle="360.0" />
            </shape>
        </clip>
    </item>
</layer-list>